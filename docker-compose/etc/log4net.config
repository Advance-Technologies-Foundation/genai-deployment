<?xml version="1.0" encoding="utf-8"?>
<log4net>

	<appender name="CommonRollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="Log/Common.log" />
		<filter type="log4net.Filter.LoggerMatchFilter">
			<loggerToMatch value="WebScraperLogger" />
			<acceptOnMatch value="false" />
		</filter>
		<filter type="log4net.Filter.LoggerMatchFilter">
			<loggerToMatch value="EmailBodyLogger" />
			<acceptOnMatch value="false" />
		</filter>
		<filter type="log4net.Filter.LoggerMatchFilter">
			<loggerToMatch value="EmailParserLogger" />
			<acceptOnMatch value="false" />
		</filter>
		<encoding value="utf-8" />
		<appendToFile value="true" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="10" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%level %date %logger [%thread] %message %newline" />
		</layout>
	</appender>

	<appender name="EnrichmentServiceRollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="Log/EnrichmentServiceLogger.log" />
		<encoding value="utf-8" />
		<appendToFile value="true" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="10" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%level %date %logger [%thread] %message%newline" />
		</layout>
	</appender>

	<appender name="EmailBodyRollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="Log/EmailBodyRollingFile.log" />
		<encoding value="utf-8" />
		<appendToFile value="true" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="10" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%level %date %logger [%thread] %message%newline%newline" />
		</layout>
	</appender>

	<appender name="EmailParserRollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="Log/EmailParser.log" />
		<encoding value="utf-8" />
		<appendToFile value="true" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="10" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%3thread] %-5level %class.%method() - %message%newline" />
		</layout>
	</appender>

	<root>
		<level value="ERROR" />
		<appender-ref ref="CommonRollingFile" />
	</root>

	<logger name="WebScraperLogger">
		<appender-ref ref="EnrichmentServiceRollingFile" />
		<level value="ERROR" />
	</logger>

	<logger name="EmailBodyLogger">
		<appender-ref ref="EmailBodyRollingFile" />
		<level value="ERROR" />
	</logger>

	<logger name="EmailParserLogger">
		<appender-ref ref="EmailParserRollingFile" />
		<level value="ERROR" />
	</logger>

</log4net>